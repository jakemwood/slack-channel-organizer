{
  "manifest_version": 3,
  "name": "Slack Channel Organizer",
  "version": "1.0.0",
  "description": "Automatically organize Slack channels into sections based on rules",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.slack.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["shared/storage.js", "shared/rules.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
